<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Show">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bc"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingRight="6dp">

            <TextView
                android:id="@+id/placeName_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/bm"
                android:gravity="center"
                android:padding="8dp"
                android:text="PLACE NAME"
                android:textSize="30sp"
                android:textStyle="bold"
                app:fontFamily="serif-monospace" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/c3" />

            <TextView
                android:id="@+id/tv_loca_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="Locality "
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_location_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="2dp"
                android:text="Indrapuri , Bhopal"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bhopal" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="REVIEWS"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_food_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="food" />

            <RatingBar
                android:id="@+id/ratingBar_fs"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:soundEffectsEnabled="false" />

            <TextView
                android:id="@+id/tv_service_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service" />

            <RatingBar
                android:id="@+id/ratingBar_ss"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_amb_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ambiance" />

            <RatingBar
                android:id="@+id/ratingBar_as"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Value for Price" />

            <RatingBar
                android:id="@+id/ratingBar_ps"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OVERALL RATING" />

            <RatingBar
                android:id="@+id/ratingBar_AVG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="What our Users say .."
                android:textSize="24sp"
                android:textStyle="bold" />

            <ScrollView
                android:id="@+id/scroller_id"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scrollbars="vertical"
                android:fillViewport="true">

                <TextView
                    android:id="@+id/tv_fb1_s"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_margin="10dp"
                    android:background="#DFCDCD"
                    android:padding="12dp"
                    android:text="FEEDBACK " />
            </ScrollView>

            <Button
                android:id="@+id/btn_addReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bm"
                android:text="Add Review" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>